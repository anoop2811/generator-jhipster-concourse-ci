---
platform: linux

image_resource:
  type: docker-image
  source:
    repository: jhipster/jhipster
    tag: v5.8.1
inputs:
- name: <%= baseName.toLowerCase() %>-git

outputs:
- name: <%= baseName.toLowerCase() %>-build

run:
  user: root
  path: <%= baseName.toLowerCase() %>-git/ci/concourse/tasks/gradle-task.sh

params:
  GRADLE_ARGS:

caches:
- path: ~/.gradle/
