---
platform: linux

image_resource:
  type: docker-image
  source: {repository: picoded/ubuntu-openjdk-8-jdk}

inputs:
- name: <%= baseName.toLowerCase() %>-git

outputs:
- name: <%= baseName.toLowerCase() %>-build

run:
  path: <%= baseName.toLowerCase() %>-git/ci/concourse/tasks/gradle-task.sh

params:
  GRADLE_ARGS:

caches:
- path: ~/.gradle/
